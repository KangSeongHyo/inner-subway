<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="comment">
	<select id="getCommentList" parameterType="com.intern.comment.CommentVO"
		resultType="com.intern.comment.CommentVO">
		SELECT scode,entryNum,commentSeq,content,writer,registrationDate
		FROM station_comments
		WHERE scode = #{scode} and
		entryNum=#{entryNum}
	</select>

	<insert id="insertComment" parameterType="com.intern.comment.CommentVO">
		INSERT INTO
		station_comments(scode,entryNum,content,writer,registrationDate)
		VALUES(#{scode},#{entryNum},#{content},#{writer},sysdate())
	</insert>
	
